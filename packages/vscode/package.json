{
  "name": "windmix-vscode",
  "displayName": "Windmix",
  "version": "0.0.1",
  "description": "WYSIWYG editor for React+Tailwind components in VS Code",
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/seanchas116/windmix",
  "bugs": {
    "url": "https://github.com/seanchas116/windmix/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanchas116/windmix.git"
  },
  "main": "./out/extension.js",
  "scripts": {
    "//test": "node ./out/test/runTest.js",
    "build": "tsc && node build.js",
    "dev": "node build.js --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "pretest": "pnpm run build && pnpm run lint",
    "vscode:prepublish": "pnpm run build"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "windmix-workbench",
          "title": "Windmix",
          "icon": "media/workbench.svg"
        }
      ]
    },
    "views": {
      "windmix-workbench": [
        {
          "id": "windmix-outline",
          "name": "Outline",
          "icon": "media/workbench.svg",
          "contextualTitle": "Outline"
        },
        {
          "id": "windmix-inspector",
          "name": "Inspector",
          "icon": "media/workbench.svg",
          "contextualTitle": "Inspector"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "windmix-outline",
        "contents": "[Open Editor](command:windmix-vscode.openEditor)"
      }
    ],
    "commands": [
      {
        "command": "windmix-vscode.openEditor",
        "title": "Windmix: Open Editor",
        "icon": "media/workbench.svg"
      },
      {
        "command": "windmix-vscode.openEditorExternal",
        "title": "Windmix: Open Editor in External Browser"
      }
    ]
  },
  "activationEvents": [
    "onWebviewPanel:windmixEditor"
  ],
  "dependencies": {
    "@babel/parser": "^7.21.8",
    "@vitejs/plugin-react": "^4.0.0",
    "diff": "^5.1.0",
    "vite": "^4.3.8",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@babel/types": "^7.21.5",
    "@seanchas116/paintkit": "workspace:*",
    "@types/diff": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.78.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.19.0",
    "@windmix/model": "workspace:*",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "glob": "^10.2.5",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "yjs": "^13.6.1"
  },
  "engines": {
    "vscode": "^1.77.0"
  }
}

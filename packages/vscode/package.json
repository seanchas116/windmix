{
  "name": "windmix-vscode",
  "displayName": "Windmix",
  "version": "0.0.1",
  "description": "WYSIWYG editor for React+Tailwind components in VS Code",
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/seanchas116/windmix",
  "bugs": {
    "url": "https://github.com/seanchas116/windmix/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanchas116/windmix.git"
  },
  "main": "./out/extension.js",
  "scripts": {
    "//test": "node ./out/test/runTest.js",
    "build": "tsc && node build.js",
    "dev": "node build.js --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "pretest": "pnpm run build && pnpm run lint",
    "vscode:prepublish": "pnpm run build"
  },
  "contributes": {
    "commands": [
      {
        "command": "windmix-vscode.openEditor",
        "title": "Open Windmix"
      }
    ]
  },
  "activationEvents": [
    "onWebviewPanel:windmixEditor"
  ],
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "vscode": "^1.77.0"
  }
}
